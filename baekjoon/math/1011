#include <iostream>

using namespace std;

int main() {
    int t;
    cin >> t;
    
    for(int i=0;i<t;i++) {
        int a, b;
        cin >> a >> b;
        
        if(a == 0) {
            cout << b-a << '\n';
        }
        else
            cout << b-a-1 << '\n';
        
    }
    
    
}
// 16퍼에서 틀림
// 반례 https://www.acmicpc.net/board/view/128555
