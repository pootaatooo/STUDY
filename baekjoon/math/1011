#include <iostream>

using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int x;
        int y;
        cin >> x >> y;
        int dis = y-x;
        int z = 1;
        long long sum = 0;
        
        while(dis > sum+z*2) { // 양쪽에서z만큼 가까워진거리보다 크면
            sum += z*2; // 양쪽에서 움직인 거리를 더해줌
            z++; // 다음 움직일 수 있는 최대거리를 만들어줌
        }
        
        if(sum+z>= dis) {
            cout << 2*z-1 << '\n';
        }
        else
            cout << 2*z << '\n';
        
        
    }
    
    
    
}

