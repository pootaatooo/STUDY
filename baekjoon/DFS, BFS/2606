#include <iostream>

using namespace std;

int com, link;
int network[101][101] = {0,};
bool check[101];
int cnt = 0;

void dfs(int k) {
    check[k] = true;
    
    for(int i=1;i<=com;i++) {
        if(!check[i] && network[k][i] == 1) {
            cnt++;
            dfs(i);
        }
    }
    
}

int main() {
    cin >> com >> link;
    
    for(int i=0;i<link;i++) {
        int a, b;
        cin >> a >> b;
        network[a][b] = 1;
        network[b][a] = 1;
    }
    
    dfs(1);
    cout << cnt;
}

# dfs 풀이

