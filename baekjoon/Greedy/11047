1. vector 사용
#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

int main() {
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    int n, k;
    cin >> n >> k;
    int x;
    vector<int>v;
    
    for(int i=0;i<n;i++) {
        cin >> x;
        v.push_back(x);
    }
    
    sort(v.begin(),v.end(),greater<>());
    int cnt = 0;
    //  for(int i=0;i<n;i++) {
    //     cout << v[i] << endl;
    // }
    
    while(1) {
        int i = 0;
        i++;
        if(k - v[i] > 0) {
            k -= v[i];
            cnt++;
        }
        else if(k == 0) {
            break;
        }
    }
    
    
    cout << cnt;
    
}




2. 배열사용

#include <iostream>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    int n, k;
    cin >> n >> k;
    int v[n+1];
    
    for(int i=0;i<n;i++) {
        cin >> v[i];
    }
    
    sort(v,v+n,greater<int>());
    int cnt = 0;
    
    while(k != 0) {
        int i = 0;
        if(k - v[i] > 0) {
            if(k-v[i] < i) {
                i++;
            }
            k -= v[i];
            cnt++;
        }
        else
            i++;
    }
    
    
    cout << cnt;
    
}
