#include <iostream>

using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    
    int a[n][m];
    
    for(int i=0;i<n;i++) {
    
        for(int j=0;j<m;j++) {
            cin >> a[i][j];    
        }
        
    }
    
    int x = 100;
    int w[n];
    
    for(int i=0;i<n;i++) {
    
        for(int j=0;j<m;j++) {
            x = min(x, a[i][j]);
        }
        
        w[i] = x;
        x = 100;

    }
    
    int y = 0;
    
    for(int i=0;i<n;i++) {
        y = max(y, w[i]);
    }
    
    cout << y << endl;

}
