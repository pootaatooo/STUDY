int a[26] = {0,} // 알파벳은 26개이므로 알파벳이 나온 횟수를 카운트해줄 배열
string s = "abcdE" 
for(int i=0;i<s.length;i++) {
  if(s[i] >= 97 && s[i] <= 122) { // 알파벳이 소문자인 경우
    s[i]-= 32; // 모두 대문자로 바꿔줌 (필요시)
  }
}
for(int i=0;i<s.length;i++) {
  a[s[i]-65]++;  //s[i]가 A일경우 아스키코드로 65임 -65를 해주므로서 a[0] 즉 첫번째 알파벳자리에 카운트를 해줌
} 
