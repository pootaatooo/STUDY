#include <stdio.h>

void aa(int n, char a, char b, char c) {
    if(n == 1) {
        printf("원반1을 %c에서 %c로 이동 \n", a, c);
    }
    else {
        aa(n-1, a, c, b);
        printf("원반%d을(를) %c에서 %c로 이동 \n", n, a, c);
        aa(n-1, b, a, c);
    }
}


int main() {
    aa(3, 'A', 'B', 'C');
    return 0;
}
